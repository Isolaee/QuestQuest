use crate::attack::Attack;
use crate::base_unit::BaseUnit;
use crate::unit_class::UnitClass;
use crate::unit_race::{Race, Terrain};
use combat::DamageType;
use graphics::HexCoord;

pub struct GoblinChief {
    base: BaseUnit,
    attacks: Vec<Attack>,
}

impl GoblinChief {
    pub fn new(name: String, position: HexCoord, terrain: Terrain) -> Self {
        let base = BaseUnit::new(name, position, Race::Goblin, UnitClass::Chief, terrain);

        let attacks = vec![
            Attack::melee("Spear Thrust", 10, 1, DamageType::pierce),
            Attack::ranged("Spear Throw", 5, 1, DamageType::pierce, 3),
        ];
        GoblinChief { base, attacks }
    }

    pub fn add_attack(&mut self, attack: Attack) {
        self.attacks.push(attack);
    }
}

crate::impl_unit_delegate!(GoblinChief);